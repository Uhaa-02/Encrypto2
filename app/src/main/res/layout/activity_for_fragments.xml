<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityForFragments"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/actor"
                android:text="Hello,"
                android:textSize="@dimen/_18ssp"
                android:textColor="#6A6666" />

            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:text="Harish"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_img2_removebg_preview"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/bg_for_search"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_icon"
                android:padding="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_13sdp"
                android:background="@drawable/bg_for_search"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/white_bg_for_chat_page"
        android:gravity="center">

        <Button
            android:id="@+id/allChats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:text="All Chats"

            android:textSize="@dimen/_12sdp" />

        <Button
            android:id="@+id/Groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="@dimen/_8sdp"
            android:paddingStart="@dimen/_20sdp"

            android:paddingEnd="@dimen/_20sdp"
            android:text="Groups"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_12sdp" />

        <Button
            android:id="@+id/Contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"



            android:text="Contacts"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_below="@+id/linearLayout5"
        android:layout_marginTop="@dimen/_20sdp" />

</RelativeLayout>